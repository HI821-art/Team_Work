@model HotelDb.Models.Room

@{
    ViewData["Title"] = "редагувати номер";
    Layout = "_Layout";
}

<section class="form-section py-4">
    <div class="container">
        <h1 class="text-center mb-4 fw-bold text-white">Створити номер</h1>
        <div class="row">
            <div class="col-md-5 mx-auto">
                <div class="card bg-dark text-white shadow-lg rounded-4 p-4">
                    <form asp-action="Create" method="post">
                        @await Html.PartialAsync("_RoomForm", Model)
                        <div class="form-group text-center">
                            <input type="submit" value="Створити" class="btn btn-primary" />
                        </div>
                    </form>
                </div>
            </div>
        </div>
        <div class="text-center mt-3">
            <a class="btn btn-outline-light" asp-action="Index">Назад до списку</a>
        </div>
    </div>
</section>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}